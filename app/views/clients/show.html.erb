				<th><b>Suburb:</b></th>
				<td><%= @client.suburb %></td>
			</tr>	
			
			<tr>
				<th><b>City:</b></th>
				<td><%= @client.city %></td>
			</tr>
			
			<tr>
				<th><b>Province:</b></th>
				<td><%= @client.province %></td>
			</tr>	
			
			<tr>
				<th><b>Postal Code:</b></th>
				<td><%= @client.postal_code %></td>
			</tr>						
			</tbody>
		</table>
		</div>
	</div>	
</div>
 
