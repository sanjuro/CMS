<div class="panel">
	<h3>Client Details</h3>
	
	<div class="panel_contents">
		<div id="attributes_table_client_2" class="attributes_table client">
		<table>
			<tbody>
			<tr>
				<th><b>Title:</b></th>
				<td><%= @client.title %></td>
			</tr>
			
			<tr>
				<th><b>Name:</b></th>
				<td><%= @client.name %></td>
			</tr>		
						
			<tr>
				<th><b>Surname:</b></th>
				<td><%= @client.surname %></td>
			</tr>	
			
			<tr>
				<th><b>SMP Number:</b></th>
				<td><%= @client.smp_number %></td>
			</tr>
			</tbody>
		</table>
		</div>
	</div>
</div>

<div class="panel">
	<h3>Contact Detail</h3>
	
	<div class="panel_contents">
		<div id="attributes_table_client_2" class="attributes_table client">
		<table>
			<tbody>
			<tr>
				<th><b>Email Address:</b></th>
				<td><%= @client.email_address %></td>
			</tr>
			
			<tr>
				<th><b>Home Tel.:</b></th>
				<td><%= @client.telephone_home %></td>
			</tr>		
						
			<tr>
				<th><b>Cell No. 1:</b></th>
				<td><%= @client.mobile_number_one %></td>
			</tr>	
			
			<tr>
				<th><b>Cell No. 2:</b></th>
				<td><%= @client.mobile_number_one %></td>
			</tr>
			
			<tr>
				<th><b>Fax:</b></th>
				<td><%= @client.fax %></td>
			</tr>			
			</tbody>
		</table>
		</div>
	</div>	
</div>

<div class="panel"> 
	<h3>Address</h3>
	
	<div class="panel_contents">
		<div id="attributes_table_client_2" class="attributes_table client">
		<table>
			<tbody>
			<tr>
				<th><b>Unit Number:</b></th>
				<td><%= @client.unit_number %></td>
			</tr>
			
			<tr>
				<th><b>Street Name:</b></th>
				<td><%= @client.street_name %></td>
			</tr>		
						
